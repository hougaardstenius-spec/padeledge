# -------------------------------------------------
# BASE IMAGE
# -------------------------------------------------
FROM python:3.10-slim

# -------------------------------------------------
# SYSTEM DEPS
# -------------------------------------------------
RUN apt-get update && apt-get install -y \
    libgl1-mesa-glx \
    libglib2.0-0 \
    cron \
    && rm -rf /var/lib/apt/lists/*

# -------------------------------------------------
# WORKDIR
# -------------------------------------------------
WORKDIR /app

# -------------------------------------------------
# COPY PROJECT
# -------------------------------------------------
COPY . /app

# -------------------------------------------------
# INSTALL REQS
# -------------------------------------------------
RUN pip install --no-cache-dir -r requirements.txt

# -------------------------------------------------
# Install cron job
# -------------------------------------------------
RUN echo "0 * * * * python /app/scripts/train_shot_model.py >> /var/log/cron.log 2>&1" > /etc/cron.d/train-model

RUN chmod 0644 /etc/cron.d/train-model
RUN crontab /etc/cron.d/train-model

# -------------------------------------------------
# Start cron daemon
# -------------------------------------------------
CMD ["cron", "-f"]
